<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_emoji"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_nights_stay_24"
        android:visibility="gone"
        app:tint="@color/black_gray_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30"
        android:contentDescription="@string/emotikon_mjeseca" />

    <TextView
        android:id="@+id/tv_no_alarms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_alarms_text"
        android:textAlignment="center"
        android:textColor="@color/black_gray_color"
        android:textSize="32sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/img_emoji"
        app:layout_constraintEnd_toEndOf="@id/img_emoji"
        app:layout_constraintStart_toStartOf="@id/img_emoji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
